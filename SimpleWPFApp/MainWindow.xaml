<Window x:Class="SimpleWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Add" HorizontalAlignment="Left" Margin="465,280,0,0" VerticalAlignment="Top" Width="100" Click="AddButton" Height="35"/>

        <Button Content="Del" HorizontalAlignment="Left" Margin="220,280,0,0" VerticalAlignment="Top" Width="100" Click="DelButton" Height="35"/>

        <Button Content="Clear" HorizontalAlignment="Left" Margin="340,280,0,0" VerticalAlignment="Top" Width="100" Click="ClearButton" Height="35"/>

        <ListView x:Name="NumberListView" HorizontalAlignment="Left" Height="200" Margin="221,50,0,0" VerticalAlignment="Top" Width="345"/>
    </Grid>
</Window>
